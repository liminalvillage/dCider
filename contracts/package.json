{
  "name": "@liquid-democracy-engine/contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Liquid Democracy Engine",
  "private": true,
  "scripts": {
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:gas": "forge test --gas-report",
    "build": "forge build && hardhat compile",
    "clean": "forge clean && hardhat clean",
    "lint": "solhint 'src/**/*.sol'",
    "deploy:chiado": "hardhat deploy --network chiado",
    "verify:chiado": "hardhat verify --network chiado"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "@superfluid-finance/ethereum-contracts": "^1.9.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "hardhat": "^2.19.0",
    "hardhat-deploy": "^0.11.45",
    "ethers": "^6.9.0",
    "solhint": "^4.1.0",
    "dotenv": "^16.3.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "typechain": "^8.3.0"
  }
}
